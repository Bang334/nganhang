@startuml UseCase Diagram
!define ICONURL https://raw.githubusercontent.com/tupadr3/plantuml-icon-font-sprites/v2.4.0
skinparam actorStyle awesome

title Hệ thống Quản lý Ngân hàng - Use Case Diagram

left to right direction

' Actors
actor "Khách hàng\n(Customer)" as Customer
actor "Giao dịch viên\n(Teller)" as Teller
actor "Nhân viên Tín dụng\n(Loan Officer)" as LoanOfficer
actor "Quản trị viên\n(Admin)" as Admin

rectangle "Banking System" {
    ' Customer Use Cases
    package "Quản lý Tài khoản" {
        usecase (Xem Tài khoản) as UC1
        usecase (Xem Giao dịch) as UC2
        usecase (Chuyển khoản) as UC3
    }
    
    package "Tiết kiệm" {
        usecase (Mở Sổ Tiết kiệm) as UC4
        usecase (Xem Sổ Tiết kiệm) as UC5
    }
    
    package "Vay vốn" {
        usecase (Đăng ký Vay) as UC6
        usecase (Xem Khoản vay) as UC7
        usecase (Đăng ký Tài sản) as UC8
    }
    
    ' Teller Use Cases
    package "Giao dịch Quầy" {
        usecase (Mở Tài khoản Mới) as UC9
        usecase (Nạp tiền) as UC10
        usecase (Rút tiền) as UC11
        usecase (Kích hoạt Thẻ) as UC12
    }
    
    ' Loan Officer Use Cases
    package "Tín dụng" {
        usecase (Thẩm định Vay) as UC13
        usecase (Phê duyệt Vay) as UC14
        usecase (Thẩm định Tài sản) as UC15
        usecase (Xử lý Nợ quá hạn) as UC16
    }
    
    ' Admin Use Cases
    package "Quản trị" {
        usecase (Quản lý Chi nhánh) as UC17
        usecase (Quản lý Nhân viên) as UC18
        usecase (Xem Báo cáo) as UC19
    }
}

' Customer Relations
Customer --> UC1
Customer --> UC2
Customer --> UC3
Customer --> UC4
Customer --> UC5
Customer --> UC6
Customer --> UC7
Customer --> UC8

' Teller Relations
Teller --> UC9
Teller --> UC10
Teller --> UC11
Teller --> UC12

' Loan Officer Relations
LoanOfficer --> UC13
LoanOfficer --> UC14
LoanOfficer --> UC15
LoanOfficer --> UC16

' Admin Relations
Admin --> UC17
Admin --> UC18
Admin --> UC19

' Extensions & Includes
UC6 ..> UC8 : <<include>>
UC13 ..> UC15 : <<include>>
UC14 ..> UC13 : <<extend>>

@enduml

