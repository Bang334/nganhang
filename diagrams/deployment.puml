@startuml Deployment Diagram

title Triển khai hệ thống - Deployment Diagram

node "Load Balancer" {
  [Nginx]
}

node "Web Server 1" {
  [Node.js App 1]
}

node "Web Server 2" {
  [Node.js App 2]
}

node "Database Master" {
  database "MySQL Master"
}

node "Database Replica" {
  database "MySQL Replica"
}

node "Cache Server" {
  [Redis]
}

[Nginx] --> [Node.js App 1]
[Nginx] --> [Node.js App 2]

[Node.js App 1] --> [MySQL Master] : Write
[Node.js App 2] --> [MySQL Master] : Write

[Node.js App 1] ..> [MySQL Replica] : Read
[Node.js App 2] ..> [MySQL Replica] : Read

[MySQL Master] ..> [MySQL Replica] : Replication

[Node.js App 1] --> [Redis]
[Node.js App 2] --> [Redis]

@enduml

