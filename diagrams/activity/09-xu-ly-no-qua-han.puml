@startuml Activity - Nợ quá hạn

title Xử lý nợ quá hạn

|Hệ thống|
start
:Quét nợ quá hạn hàng ngày;

:SELECT overdue_payments;

if (Quá hạn 1-30 ngày?) then (yes)
  #LightYellow:Nợ cần chú ý;
  :Lãi phạt: +2%;
  :Gửi SMS nhắc nhở;
  stop
endif

if (Quá hạn 31-90 ngày?) then (yes)
  #Orange:Nợ dưới chuẩn;
  :Lãi phạt: +3%;
  :Gọi điện thoại;
  :Gửi email cảnh báo;
  stop
endif

if (Quá hạn 91-180 ngày?) then (yes)
  #OrangeRed:Nợ nghi ngờ;
  :Lãi phạt: +4%;
  |Cán bộ tín dụng|
  :Gặp gỡ khách hàng;
  :Yêu cầu trả ngay;
  stop
endif

if (Quá hạn > 180 ngày?) then (yes)
  #Red:Nợ xấu;
  :Lãi phạt: +5%;
  :Báo cáo CIC;
  |Quản lý chi nhánh|
  :Khởi động thủ tục pháp lý;
  :Xử lý tài sản thế chấp;
  stop
endif

@enduml

